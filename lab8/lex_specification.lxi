%{
#include <stdio.h>
#include <string.h>
#include "yacc_specification.tab.c"
int yylex();
%}

%option noyywrap
%option caseless

LETTER		[A-Za-z_]
DIGIT		[0-9]
IDENTIFIER	{LETTER}({LETTER}|{DIGIT})*
INT			({+} | {-})*{DIGIT}+
REAL		{NUMBER}"."{NUMBER}
SEPARATOR	[;.,:{}[] ]
OPERATORS	[+ - / % := < > = ! & |"
STRING		["][^\n"]*["]
CHAR		"'"[^\n]"'"

%%

int {return INT;}
bool {return BOOL;}
real {return REAL;}
char {return CHAR;}
string {return STRING;}
none {return NONE;}
if {return IF;}
then { return THEN; }
else {return ELSE;}
while {return WHILE;}
do { return DO; }
return {return RETURN;}

{IDENTIFIER} {printf("%s - identifier\n", yytext);}

;   {return SEMI_COLON;} 
\.  {return DOT;} 
"," {return COMMA;} 
\:  {printf("%s - separator\n", yytext);} 
\{  {return OPEN_CURLY_BRACKET;} 
\}  {return CLOSED_CURLY_BRACKET;} 
\[  {return OPEN_SQUARE_BRACKET;} 
\]  {return CLOSED_SQUARE_BRACKET;} 

\+  {return PLUS;}
\-  {return MINUS;}
\*  {return MUL;}
\/  {return DIV;}
\%  {return PERCENT;}
\<  {return LT;}
\>  {return GT;}
\:= {return ATRIB;}
"=" {return EQ;}
\!  {return NOT;}
\&  {return AND;}
\|  {return OR;}

